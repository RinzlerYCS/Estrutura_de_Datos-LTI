                    else:
                        print("No hay notas emitidas para dicho período.")
                    break

            if submenu == 2: #CAMBIAMOS LAS CADENAS POR NUMEROS
                while True:
                    try:
                        consulta_folio = int(input("Ingrese el folio a consultar:\n"))
